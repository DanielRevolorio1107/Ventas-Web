@model VentasWeb.Models.ViewModels.VentaDetalleViewModel
@{
    ViewData["Title"] = $"Venta #{Model.Id}";
}
<link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.2/dist/css/bootstrap.min.css" rel="stylesheet" />

<div class="container py-4">
  <h1 class="mb-3">Venta #@Model.Id</h1>

  <div class="mb-3">
    <b>Fecha:</b> @Model.Fecha.ToString("yyyy-MM-dd") <br />
    <b>Cliente:</b> @Model.ClienteNombre <br />
    <b>Total:</b> @Model.Total.ToString("C")
  </div>

  <div class="table-responsive">
    <table class="table table-striped">
      <thead>
        <tr>
          <th>Producto</th>
          <th class="text-end">Cantidad</th>
          <th class="text-end">Precio</th>
          <th class="text-end">Subtotal</th>
        </tr>
      </thead>
      <tbody>
      @foreach (var d in Model.Detalles)
      {
        <tr>
          <td>@d.ProductoNombre</td>
          <td class="text-end">@d.Cantidad</td>
          <td class="text-end">@d.PrecioUnitario.ToString("C")</td>
          <td class="text-end">@d.Subtotal.ToString("C")</td>
        </tr>
      }
      </tbody>
    </table>
  </div>

  <a asp-controller="Ventas" asp-action="Historial" class="btn btn-outline-secondary">Volver</a>
</div>
